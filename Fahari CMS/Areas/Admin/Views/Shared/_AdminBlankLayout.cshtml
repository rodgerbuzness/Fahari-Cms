
@{ 
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="Welcome to super Admin from Fahari Technologies" />
    <meta name="author" content="FahariTech" />
    <link href="~/favicon.ico" rel="icon" />

    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/custom/css/admin/login.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/custom/css/admin/login.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    </environment>

    @RenderSection("Styles", false);
</head>
<body>

    <div class="wrapper">
        <div class="container-fluid bg-white shadow">
            @RenderBody()
        </div>

        <footer class="container-fluid fixed-bottom">
            <div class="copyright text-center mr-auto">
                <span>Admin panel created by <a href="#">FahariTech<sup>;&copy;2019</sup></a></span>
            </div>
        </footer>
    </div>



    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/custom/js/admin/admin.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/custom/js/admin/admin.min.js"></script>
    </environment>

    @RenderSection("Scripts", false);

</body>
</html>
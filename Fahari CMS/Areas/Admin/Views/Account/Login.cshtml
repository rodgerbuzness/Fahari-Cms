@using ModelService
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@section Styles{

    <link href="~/lib/limonte-sweetalert2/sweetalert2.css" rel="stylesheet" />
}

<section class="adminLogin">
    <div class="container">
        <div class="col">
            <div class="adminLoginFormDiv" id="adminLoginFormDiv">

                <div class="adminLoginFormDivCard card">
                    <div class="inner">
                        <form action="/" method="post">
                            <div class="login-form" id="login-form">
                                <h2 class="form-title">Sign In</h2>
                                <div class="form-group">
                                    <input type="email" asp-for="Email" class="form-input" id="emailLogin" placeholder="rodgerbuzness32@gmail.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-input" asp-for="Password" id="loginPassword" placeholder="Enter Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="RememberMe" type="checkbox" id="rememberMe" class="rememberMe" />
                                    <label for="rememberFor" class="label-agree-term">
                                        <span></span>
                                        <span>Remember Password ?</span>
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input type="submit" name="LoginSubmit" class="form-submit" value="Login" />
                                </div>
                            </div>
                        </form>
                        <p class="loginArea">Don't remember your password? <a href="#" class="loginArea">Forgot Password</a></p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts{ 
    <script src="~/lib/limonte-sweetalert2/sweetalert2.js"></script>
}